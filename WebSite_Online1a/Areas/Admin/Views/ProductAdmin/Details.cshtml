@model WebSite_Online1a.Models.Product

@{
    ViewData["Title"] = "Details sản phẩm admin";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="page-inner">
    <div>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a asp-controller="Home" asp-action="Index">Home</a>
            </li>
            <li class="breadcrumb-item active">
                <a asp-controller="ProductAdmin" asp-action="Index">Danh Sách Sản Phẩm</a>
            </li>
            <li class="breadcrumb-item active">
                <a>Xem Chi Tiết Sản Phẩm: @Model.NameProduct</a>
            </li>
        </ol>
    </div>
    <hr class="my-10">
    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="SpecificationId" />

        <tr class="row-details bg-light collapse" id="details-cid5743">
            <td colspan="6">
                <div class="row">
                    <div class="col-md-auto text-center">
                        <div class="tile tile-xl tile-circle bg-purple mb-2"> O </div>
                        <h3 class="card-title mb-2"> Thông Tin Sản phẩm </h3>
                        <h3 class="card-title mb-2"> @Model.NameProduct </h3>
                    </div>
                    <div class="col-md-8">
                        <table class="table table-bordered">

                            <tbody>

                                <tr>
                                    <td> Màn Hình </td>
                                    <td> @Model.Specification.SizeCreen</td>
                                </tr>
                                <tr>
                                    <td> Cpu </td>
                                    <td> @Model.Specification.Cpu </td>
                                </tr>
                                <tr>
                                    <td> Hệ Điều Hành </td>
                                    <td> @Model.Specification.OperatingSystem </td>
                                </tr>
                                <tr>
                                    <td> Ram </td>
                                    <td> @Model.Specification.Ram </td>
                                </tr>
                                <tr>
                                    <td> Camera </td>
                                    <td> @Model.Specification.Camera </td>
                                </tr>
                                <tr>
                                    <td> Camera Selfie </td>
                                    <td> @Model.Specification.CameraSelfie </td>
                                </tr>
                                <tr>
                                    <td> Pin </td>
                                    <td> @Model.Specification.Battery </td>
                                </tr>
                                <tr>
                                    <td>
                                        Mô Tả
                                    </td>
                                    <td>
                                        @{
                                            var content = Model.Specification.Description; // Lấy nội dung từ CSDL
                                        }
                                        <div id="summernote-content">
                                            @Html.Raw(content) <!-- Sử dụng Html.Raw để hiển thị nội dung HTML mà không bị mã hóa -->
                                        </div>
                                    </td>
                                </tr>
                                <tr>
                                    <td> Giá </td>
                                    <td> @Model.Price</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </td>
        </tr>

        <div>
            <hr class="my-10">
        </div>
        <div class="col-md-5">
            <button asp-action="Index" class="btn btn-outline-secondary">Quay về</button>
        </div>
    </form>
    <hr class="my-10">
</div>
