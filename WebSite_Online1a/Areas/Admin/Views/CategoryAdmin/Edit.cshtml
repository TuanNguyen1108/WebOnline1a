@model WebSite_Online1a.Models.Category

@{
    ViewData["Title"] = "Edit danh mục admin";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="page-inner">
    <div>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a asp-controller="Home" asp-action="Index">Home</a>
            </li>
            <li class="breadcrumb-item active">
                <a asp-controller="CategoryAdmin" asp-action="Index">Danh Sách Danh Mục</a>
            </li>
            <li class="breadcrumb-item active">
                <a>Chỉnh Sửa Danh Mục</a>
            </li>
        </ol>
    </div>
    <hr class="my-10">
    @using (Html.BeginForm("Edit", "CategoryAdmin", FormMethod.Post, new { @enctype = "multipart/form-data" }))
    {
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="CategoryId" />
            <input type="hidden" asp-for="CategoryImage" />

            <div class="col-md-5">
                <label class="form-control-label">Tên Danh Mục:</label>
                <input class="form-control" type="text" asp-for="NameCategory">
            </div>
            <div class="col-md-5">
                <label class="form-control-label">Thương Hiệu:</label>
                <select asp-for="BrandId" class="form-control" asp-items="ViewBag.NameBrand"></select>
            </div>
            <div class="col-md-5">
                <label class="form-control-label">Hình Ảnh:</label>
                <div>
                    @if (!string.IsNullOrEmpty(Model.CategoryImage))
                    {
                        <img width="100" height="100" src="~/IMAGE/Categorys/@Model.CategoryImage" />
                    }
                </div>
                <input name="userfiles" type="file" multiple asp-for="CategoryImage">
            </div>
            <hr class="my-10">
            <div class="col-md-5">
                <button asp-action="Edit" class="btn btn-danger">Lưu</button> |
                <button asp-action="Index" class="btn btn-outline-secondary">Quay về</button>
            </div>
        </form>
    }
</div>
