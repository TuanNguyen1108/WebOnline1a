@model WebSite_Online1a.Models.Category

@{
    ViewData["Title"] = "Create danh mục admin";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="page-inner">

    <div>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a asp-controller="Home" asp-action="Index">Home</a>
            </li>
            <li class="breadcrumb-item active">
                <a asp-controller="CategoryAdmin" asp-action="Create">Tạo mới Danh Mục</a>
            </li>
        </ol>
    </div>

    <hr class="my-10">
    @using (Html.BeginForm("Create", "CategoryAdmin", FormMethod.Post, new { @enctype = "multipart/form-data" }))
    {
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-md-5">
                <label class="form-control-label">Tên Danh Mục:</label>
                <input class="form-control" type="text" asp-for="NameCategory">
            </div>
            <div class="col-md-5">
                <label class="form-control-label">Thương Hiệu:</label>
                <select asp-for="BrandId" class="form-control" asp-items="ViewBag.NameBrand"></select>
            </div>
            <div class="col-md-5">

                <label class="form-control-label">Hình Ảnh:</label>
                <input name="userfiles" type="file" multiple asp-for="CategoryImage">

                <img id="preview" src="#" width="100" height="100" class="hidden" />

                <script>
                    CategoryImage.onchange = evt => {
                        const [file] = CategoryImage.files
                        if (file) {
                            preview.src = URL.createObjectURL(file);
                            $("#preview").removeClass("hidden");
                        }
                    }
                </script>
            </div>
            <div class="col-md-5">
                <div class="form-group">
                    <button type="submit" class="btn btn-outline-success">Tạo mới</button>
                </div>
                <div>
                    <button asp-action="Index" class="btn btn-outline-secondary">Quay về</button>
                </div>
            </div>
        </form>
    }
    <hr class="my-10">
</div>