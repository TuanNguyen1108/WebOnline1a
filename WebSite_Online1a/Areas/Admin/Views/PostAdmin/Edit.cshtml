@model WebSite_Online1a.Models.Post

@{
    ViewData["Title"] = "Edit Tin tức";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="page-inner">

    <div>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a asp-controller="Home" asp-action="Index">Home</a>
            </li>
            <li class="breadcrumb-item active">
                <a asp-controller="AdminPost" asp-action="Index">Danh Sách Tin</a>
            </li>
            <li class="breadcrumb-item active">
                <a>Chỉnh sửa tin</a>
            </li>
        </ol>
    </div>
    <hr class="my-10">
    @using (Html.BeginForm("Edit", "PostAdmin", FormMethod.Post, new { @enctype = "multipart/form-data" }))
    {
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="PostId" />
            <input type="hidden" asp-for="Image" />
            <input type="hidden" asp-for="CreateDate" />

            <div class="col-md-10">
                <label class="form-control-label">Tiêu Đề:</label>
                <input class="form-control" type="text" asp-for="Title">
            </div>
            <div class="col-md-10">
                <label class="form-control-label">Tác Giả:</label>
                <input class="form-control" type="text" asp-for="Author">
            </div>
            <div class="col-md-10">
                <label class="form-control-label">Hình Ảnh:</label>
                <div>
                    @if (!string.IsNullOrEmpty(Model.Image))
                    {
                        <img width="250" height="200" src="~/IMAGE/News/@Model.Image" />
                    }
                </div>
                <input name="userfiles" type="file" asp-for="Image">
            </div>
            <div class="form-group form-check col-md-10">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Published"><span>Trạng Thái</span>
                </label>
            </div>
            <div class="form-group form-check col-md-10">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsHot"><span>Tin Hot</span>
                </label>
            </div>
            <div class="form-group form-check col-md-10">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsNewfeed"><span>NewFeed</span>
                </label>
            </div>
            <div class="col-md-10">
                <label class="form-control-label">MetaKey:</label>
                <input class="form-control" type="text" asp-for="MetaKey">
            </div>
            <div class="col-md-10">
                <label class="form-control-label">MetaDesc:</label>
                <input class="form-control" type="text" asp-for="MetaDesc">
            </div>
            <div class="col-md-10">
                <label class="form-control-label">Nội dung:</label>
                <textarea id="summernote" asp-for="Contents" class="form-control"></textarea>
            </div>
            <div>
                <hr class="my-10">
            </div>
            <div class="col-md-5">
                <button asp-action="Edit" class="btn btn-danger">Lưu</button> |
                <button asp-action="Index" class="btn btn-outline-secondary">Quay về</button>
            </div>
        </form>
    }
    <hr class="my-10">
</div>
@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/summernote/0.8.18/summernote-bs4.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#summernote').summernote();
        });
    </script>
}