@model WebSite_Online1a.Models.Account

@{
    ViewData["Title"] = "Details account";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="page-inner">
    <div>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a asp-controller="Home" asp-action="Index">Home</a>
            </li>
            <li class="breadcrumb-item active">
                <a asp-controller="AccountAdmin" asp-action="Index">Quản Lý Accounts</a>
            </li>
            <li class="breadcrumb-item active">
                Chi Tiết Account: @Model.Email
            </li>
        </ol>
    </div>
    <hr class="my-10">
    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="AccountId" />
        <div class="form-group">
            <label class="form-control-label">Tài Khoảng: @Html.DisplayFor(model => model.Email)</label>
        </div>
        <div class="form-group">
            <label class="form-control-label">Tên: @Html.DisplayFor(model => model.HoTen)</label>
        </div>
        <div class="form-group">
            <label class="form-control-label">Role: @Html.DisplayFor(model => model.RoleId)</label>
        </div>
        <div class="form-group">
            <label class="form-control-label">PassWord(md5): @Html.DisplayFor(model => model.Password)</label>
        </div>
        <div class="form-group">
            <label class="form-control-label">PassWord: @Html.DisplayFor(model => model.ConfirmPassword)</label>
        </div>
        <div class="form-group">
            <label class="form-control-label">SĐT: @Html.DisplayFor(model => model.Sdt)</label>
        </div>
        <div class="form-group">
            <label class="form-control-label">Địa Chỉ: @Html.DisplayFor(model => model.Address)</label>
        </div>
        <div class="col-md-5">
            <button asp-action="Index" class="btn btn-outline-secondary">Quay về</button>
        </div>
    </form>
    <hr class="my-10">
</div>
