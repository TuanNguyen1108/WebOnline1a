@model WebSite_Online1a.Models.Brand

@{
    ViewData["Title"] = "Delete thương hiệu admin";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="page-inner">
    <div>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a asp-controller="Home" asp-action="Index">Home</a>
            </li>
            <li class="breadcrumb-item active">
                <a asp-controller="BrandAdmin" asp-action="Index">Quản Lý Thương Hiệu</a>
            </li>
            <li class="breadcrumb-item active">
                Xóa Thương Hiệu
            </li>
        </ol>
    </div>
    <hr class="my-10">

    <form>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="BrandId" />
        <div class="form-group">
            <label class="form-control-label">Tên Thương Hiệu:<h4>@Html.DisplayFor(model => model.NameBrand)</h4></label>
            <!--<input class="form-control" type="text" asp-for="NameCategory">-->
        </div>
    </form>

    <form asp-action="Delete">
        <button asp-action="Delete" class="btn btn-danger">Xóa</button> |
        <button asp-action="Index" class="btn btn-outline-secondary">Quay về</button>
    </form>
    <hr class="my-10">
</div>