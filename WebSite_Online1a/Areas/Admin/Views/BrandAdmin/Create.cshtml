@model WebSite_Online1a.Models.Brand

@{
    ViewData["Title"] = "Create thương hiệu admin";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="page-inner">

    <div>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a asp-controller="Home" asp-action="Index">Home</a>
            </li>
            <li class="breadcrumb-item active">
                <a asp-controller="BrandAdmin" asp-action="Index">Quản Lý Thương Hiệu</a>
            </li>
            <li class="breadcrumb-item active">
                Tạo Mới Thương Hiệu
            </li>
        </ol>
    </div>

    <hr class="my-10">


    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-md-5">
            <label class="form-control-label">Tên Thương Hiệu:</label>
            <input class="form-control" type="text" asp-for="NameBrand">
        </div>
        <div class="col-md-5">
            <div class="form-group">
                <button type="submit" class="btn btn-outline-success">Tạo mới</button>
            </div>
            <div>
                <button asp-action="Index" class="btn btn-outline-secondary">Quay về</button>
            </div>
        </div>
    </form>

    <hr class="my-10">
</div>

