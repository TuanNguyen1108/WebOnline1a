    <pager class="pager-container" options="@PagedListRenderOptions.Bootstrap4PageNumbersOnly" list="@Model" asp-area="Admin" asp-controller="Category" asp-action="Index" />
    </ul>
    </div>*@
    <!--Phân trang-->
</div>