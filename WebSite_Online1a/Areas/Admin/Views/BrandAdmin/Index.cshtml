@model IEnumerable<WebSite_Online1a.Models.Brand>

@{
    ViewData["Title"] = "Index quản lý thương hiệu admin";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="page-inner">

    <div>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a asp-controller="Home" asp-action="Index">Home</a>
            </li>
            <li class="breadcrumb-item active">
                <a asp-controller="BrandAdmin" asp-action="Index">Quản Lý Thương Hiệu</a>
            </li>
        </ol>
    </div>
    <!-- table -->
    <hr class="my-10">
    <div class="card card-fluid">
        <!-- .card-body -->
        <div class="card-body">
            <div class="input-group input-group-alt">
                <form asp-action="Search" method="get" class="form-inline">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><span class="oi oi-magnifying-glass"></span></span>
                        </div>
                        <input name="name" type="text" class="form-control" placeholder="Tìm Kiếm Thương Hiệu">
                        <button class="btn btn-danger">Tìm</button>
                    </div>
                </form>
            </div>
            <div class="table-responsive">
                <!-- .table -->
                <table class="table">
                    <!-- thead -->
                    <thead>
                        <tr>
                            <th>
                                Tên Thương Hiệu
                            </th>                          
                            <th></th>
                            <th></th>
                        </tr>
                    </thead><!-- /thead -->
                    <!-- tbody -->
                    <tbody>
                        @if (Model != null && Model.Count() > 0)
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td class="align-middle">
                                        @item.NameBrand
                                    </td>
                                    <td></td>
                                    <td class="align-middle text-right">
                                        <a class="btn btn-sm btn-icon btn-secondary" asp-area="Admin" asp-controller="BrandAdmin" asp-action="Details" asp-route-id="@item.BrandId">
                                            <i class="fa fa-calendar-week"></i>
                                            <span class="sr-only">Details</span>
                                        </a>
                                        <a class="btn btn-sm btn-icon btn-secondary" asp-area="Admin" asp-controller="BrandAdmin" asp-action="Edit" asp-route-id="@item.BrandId">
                                            <i class="fa fa-pencil-alt"></i>
                                            <span class="sr-only">Edit</span>
                                        </a>
                                        <a class="btn btn-sm btn-icon btn-secondary" asp-area="Admin" asp-controller="BrandAdmin" asp-action="Delete" asp-route-id="@item.BrandId">
                                            <i class="far fa-trash-alt"></i>
                                            <span class="sr-only">Remove</span>
                                        </a>
                                    </td>
                                </tr>
                            }
                        }

                    </tbody>
                </table>
                <div class="card-footer">
                    <a asp-area="Admin" asp-controller="BrandAdmin" asp-action="Create" class="card-footer-item"><i class="fa fa-plus-circle mr-1"></i> Thêm Thương Hiệu</a>
                </div>
            </div>
        </div>
    </div>
    <hr class="my-10">
    <!-- .section-block -->
