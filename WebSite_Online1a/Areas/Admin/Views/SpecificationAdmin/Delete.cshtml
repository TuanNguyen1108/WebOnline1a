@model WebSite_Online1a.Models.Specification

@{
    ViewData["Title"] = "Delete thông số admin";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="page-inner">
    <div>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a asp-controller="Home" asp-action="Index">Home</a>
            </li>
            <li class="breadcrumb-item active">
                <a asp-controller="SpecificationAdmin" asp-action="Index">Danh Sách Thông Số</a>
            </li>
            <li class="breadcrumb-item active">
                Xóa Thông Số Kỹ Thuật
            </li>
        </ol>
    </div>
    <hr class="my-10">

    <form>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="SpecificationId" />
        <div class="form-group">
            <label class="form-control-label">Sản Phẩm: @Model.NameSpecification</label>
            <!--<input class="form-control" type="text" asp-for="NameCategory">-->
        </div>
    </form>

    <form asp-action="Delete">
        <input type="hidden" asp-for="SpecificationId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <button asp-action="Index" class="btn btn-outline-secondary">Quay về</button>
    </form>
    <hr class="my-10">
</div>