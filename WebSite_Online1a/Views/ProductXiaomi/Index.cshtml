@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model List<Product>

<div class="bodywrap">
    <div class="layout-collection">
        <section class="bread-crumb">
            <div class="container">
                <ul class="breadcrumb">
                    <li class="home">
                        <a href="/home"><span>Trang chủ</span></a>
                        <span class="mr_lr">&nbsp;/&nbsp;</span>
                    </li>
                    <li>
                        <a class="changeurl" href="/ProductAll"><span>Sản Phẩm</span></a>
                        <span class="mr_lr">&nbsp;/&nbsp;</span>
                    </li>
                    <li>
                        <a class="changeurl" href="/ProductXiaomi"><span>Xiaomi</span></a>
                    </li>
                </ul>
            </div>
        </section>
        <section class="section_slider">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12 col-md-12 col-12 slider">
                        <div class="home-slider swiper-container swiper-container-initialized swiper-container-horizontal swiper-container-pointer-events">
                            <div class="swiper-wrapper">
                                <div class="swiper-slide swiper-slide-prev" style="height: 350px">
                                    <a class="clearfix" title="ND Tech">
                                        <picture>
                                            <img src="/Asset/Panner/PannerXiaomi.png" alt="ND Tech" class="img-responsive">
                                        </picture>
                                    </a>
                                </div>                              
                            </div>
                            <div class="swiper-pagination swiper-pagination-clickable swiper-pagination-bullets"><span class="swiper-pagination-bullet"></span><span class="swiper-pagination-bullet swiper-pagination-bullet-active"></span></div>
                        </div>
                    </div>
                </div>
                <!--nút chuyển slide-->
                <script>
                    var swiper = new Swiper('.home-slider', {
                        autoplay: false,
                        pagination: {
                            el: '.home-slider .swiper-pagination',
                            clickable: true,
                        },
                        navigation: {
                            nextEl: '.home-slider .swiper-button-next',
                            prevEl: '.home-slider .swiper-button-prev',
                        },
                    });
                </script>
                <!--nút chuyển slide-->
            </div>
        </section>
        <div class="container">
            <div class="row margin-10-">
                <div class="block-collection col-lg-12 col-12 padding-10">

                    <div class="category-products">
                        <div class="products-view products-view-grid list_hover_pro">
                            <h6 style="font-weight: bold">
                                Điện Thoại Xiaomi:
                            </h6>
                            <div class="row margin">
                                @foreach (var item in Model)
                                {
                                    string url = $"ProductAll/details/{@item.ProductId}";
                                    <div class="col-6 col-xl-2 col-lg-4 col-md-4 padding">
                                        <div class="item_product_main">
                                            <form method="post" class="variants product-action " data-cart-form data-id="product-actions-27357040" enctype="multipart/form-data">
                                                <div class="product-thumbnail">
                                                    <a class="image_thumb scale_hover" href="@url">
                                                        <img class="lazyload" src="~/IMAGE/Products/@item.ProductImage">
                                                    </a>
                                                    <div class="actions-primary">
                                                        <input class="hidden" type="hidden" name="variantId" value="70241716" />
                                                        @*<button class="btn-cart" title="Tùy chọn" type="button" onclick="window.location.href='iphone-13-pro-max-128gb'">
                                                    Tùy chọn
                                                    </button>*@
                                                        <button asp-controller="ProductAll" asp-action="Details" asp-route-id="@item.ProductId">
                                                            <span>Xem Sản Phẩm</span>
                                                        </button>
                                                    </div>
                                                </div>
                                                <div class="product-info">
                                                    <h3 class="product-name" style=" font-weight: bold;"><a href="@url">@item.NameProduct</a></h3>
                                                    <div class="price-box" style="color:  #ff0000; font-weight: bold;">
                                                        @item.Price.Value.ToString("#,##,00")VND &nbsp;
                                                    </div>
                                                </div>

                                                <div class="action d-xl-block d-none">
                                                    <div class="actions-secondary">
                                                        <a type="button" data-id="@item.ProductId" class="ajax-add-to-cart1 action btn-compare js-btn-wishlist setWishlist btn-views active">
                                                            <svg xmlns="http://www.w3.org/2000/svg" width="12" height="11" viewBox="0 0 12 11" fill="none">
                                                                <path d="M1.21763 5.64124C0.581381 3.86545 1.37671 1.60538 3.12641 1.12108C4.08078 0.798209 5.35327 1.12106 5.98952 2.08967C6.62577 1.12106 7.89826 0.798209 8.85263 1.12108C10.7614 1.76682 11.3977 3.86545 10.7614 5.64124C9.96609 8.38563 6.78483 10 5.98952 10C5.19421 9.83856 2.17201 8.54707 1.21763 5.64124Z" stroke="white" stroke-width="0.75" stroke-linecap="round" stroke-linejoin="round">
                                                                </path>
                                                            </svg>
                                                        </a>
                                                        <a href="javascript:void(0)" class="setCompare btn-views js-compare-product-add active" data-compare="iphone-13-pro-max-128gb" data-type="Điện thoại" tabindex="0" title="Bỏ so sánh" style="cursor: default;">
                                                            <svg x="0" y="0" viewBox="0 0 459 459.648" style="enable-background:new 0 0 512 512">
                                                                <path xmlns="http://www.w3.org/2000/svg" d="m416.324219 293.824219c0 26.507812-21.492188 48-48 48h-313.375l63.199219-63.199219-22.625-22.625-90.511719 90.511719c-6.246094 6.25-6.246094 16.375 0 22.625l90.511719 90.511719 22.625-22.625-63.199219-63.199219h313.375c44.160156-.054688 79.945312-35.839844 80-80v-64h-32zm0 0" fill="#7B7B7B" data-original="#000000" style=""></path>
                                                                <path xmlns="http://www.w3.org/2000/svg" d="m32.324219 165.824219c0-26.511719 21.488281-48 48-48h313.375l-63.199219 63.199219 22.625 22.625 90.511719-90.511719c6.246093-6.25 6.246093-16.375 0-22.625l-90.511719-90.511719-22.625 22.625 63.199219 63.199219h-313.375c-44.160157.050781-79.949219 35.839843-80 80v64h32zm0 0" fill="#7B7B7B" data-original="#000000" style=""></path>
                                                            </svg>
                                                        </a>
                                                    </div>
                                                </div>

                                            </form>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <section>
            <div class="container">
                <div class="page-content page-content-img">
                    <p class="MsoNormal" align="center" style="margin-bottom:6.0pt;text-align:center;line-height:150%">
                        <b>
                            <span lang="EN" style="font-size:18.0pt;line-height:150%">
                                Mua Xiaomi chính hãng  tại itechStore
                                <o:p></o:p>
                            </span>
                        </b>
                    </p>
                    <p class="MsoNormal" style="margin-bottom:6.0pt;text-align:justify;line-height:150%">
                        <span lang="EN" style="font-size:12.0pt;line-height:150%">
                            Xiaomi là thương
                            hiệu không còn xa lạ với người dùng tại thị trường Việt Nam. Bên cạnh các sản
                            phẩm gia dụng như robot hút bụi, Tivi,... Xiaomi cũng là một trong năm nhà sản
                            xuất smartphone lớn nhất trên thế giới. Nếu bạn muốn tìm mua một mẫu điện thoại
                            trong phân khúc từ tầm trung đến cao cấp thì hãy tham khảo điện thoại từ Xiaomi
                            nhé. <o:p></o:p>
                        </span>
                    </p>

                    <p class="MsoNormal" style="margin-bottom:6.0pt;text-align:justify;line-height:150%">
                        <b>
                            <span lang="EN">
                                Thương hiệu Xiaomi từ Trung
                                Quốc<o:p></o:p>
                            </span>
                        </b>
                    </p>

                    <p class="MsoNormal" style="margin-bottom:6.0pt;text-align:justify;line-height:150%">
                        <span lang="EN" style="font-size:12.0pt;line-height:150%">
                            Thương hiệu
                            Xiaomi ra đời từ năm 2010 với trụ sở đặt tại Bắc Kinh, Trung Quốc. Tính đến thời
                            điểm hiện tại, thương hiệu đã hoạt động trên thị trường hơn 13 năm và đạt được
                            nhiều kỷ lục trong ngành. “Ông lớn” Trung Quốc cũng là một trong năm nhà sản xuất
                            smartphone lớn nhất thế giới. Các mẫu điện thoại của hãng xuất hiện ở tất cả
                            các phân khúc, từ giá rẻ, tầm trung đến những flagship cao cấp. Khi thị trường
                            công nghệ phát triển và thay đổi không ngừng mang đến cơ hội cho Xiaomi mở rộng
                            danh mục sản phẩm của mình. Người dùng có thể dễ dàng tìm mua được các mẫu loa,
                            sạc dự phòng, gia dụng,... của thương hiệu này với mức giá vô cùng hợp lý. <o:p></o:p>
                        </span>
                    </p>

                    <p class="MsoNormal" style="margin-bottom:6.0pt;text-align:justify;line-height:150%">
                        <b>
                            <span lang="EN">
                                Thiết kế hiện đại, màu sắc
                                trẻ trung <o:p></o:p>
                            </span>
                        </b>
                    </p>

                    <p class="MsoNormal" style="margin-bottom:6.0pt;text-align:justify;line-height:150%">
                        <span lang="EN" style="font-size:12.0pt;line-height:150%">
                            Ở Việt Nam, điện
                            thoại Xiaomi được sử dụng phổ biến bởi rất nhiều đối tượng người dùng. Hầu hết
                            các mẫu smartphone của Xiaomi đều sở hữu thiết kế nguyên khối chắc chắn, cho
                            người dùng cảm giác đầm tay khi cầm và thoải mái sử dụng. Màn hình lớn với phần
                            notch gọn gàng cũng là ưu điểm của những chiếc điện thoại Xiaomi, cho người
                            dùng không gian hiển thị nội dung và thao tác dễ dàng hơn. Nhà sản xuất luôn sử
                            dụng các màu sắc trẻ trung cho các mẫu smartphone của mình như trắng, xanh
                            dương, đen,... phù hợp với người dùng trong mọi lứa tuổi. Một số mẫu còn có phần
                            lưng họa tiết gợn sóng hoặc hiệu ứng gradient, khiến nó trong cuốn hút và bắt mắt
                            từ mọi góc nhìn. <o:p></o:p>
                        </span>
                    </p>

                    <p class="MsoNormal" style="margin-bottom:6.0pt;text-align:justify;line-height:150%">
                        <b>
                            <span lang="EN">
                                Cấu hình mạnh mẽ, hệ điều
                                hành MIUI linh hoạt<o:p></o:p>
                            </span>
                        </b>
                    </p>

                    <p class="MsoNormal" style="margin-bottom:6.0pt;text-align:justify;line-height:150%">
                        <span lang="EN" style="font-size:12.0pt;line-height:150%">
                            Hầu hết những chiếc
                            smartphone của Xiaomi đều có mức giá khá phải chăng. Tuy nhiên, nhà sản xuất vẫn
                            trang bị cho máy con chip hiệu năng ổn định, có thể xử lý các thao tác mượt mà.
                            Một số đối tác quan trọng của Xiaomi có thể kể đến như Snapdragon, MediaTek
                            Helio,... tùy theo từng phiên bản và dòng máy. Flagship nhà Xiaomi cũng được
                            đánh giá nổi bật không thua kém gì các thương hiệu từ Mỹ hay Hàn Quốc. Bên cạnh
                            đó, Xiaomi còn sở hữu hệ điều hành MIUI với giao diện thân thiện, nhiều tính
                            năng hữu ích và cập nhật liên tục, mang đến cho người dùng trải nghiệm tuyệt vời
                            nhất. <o:p></o:p>
                        </span>
                    </p>

                    <p class="MsoNormal" style="margin-bottom:6.0pt;text-align:justify;line-height:150%">
                        <span lang="EN" style="font-size:12.0pt;line-height:150%">
                            Ngoài ra, camera
                            cũng là ưu điểm của những chiếc điện thoại Xiaomi. Nhà sản xuất không ngừng cải
                            tiến công nghệ và cảm biến, mang đến cho người dùng nhiều chế độ chụp đa dạng
                            như lấy nét tự động, HDR, chân dung, toàn cảnh,... Ảnh chụp từ điện thoại
                            Xiaomi đạt được độ sắc nét với màu sắc sống động, tự nhiên nhất. Ngoài ra, nếu
                            bạn là người yêu thích ghi lại khoảnh khắc qua những thước phim thì smartphone
                            cũng có thể hỗ trợ mọi lúc mọi nơi. Nhìn chung, dù ở mức giá nào, điện thoại
                            Xiaomi cũng đáp ứng được các nhu cầu sử dụng cơ bản của người dùng. <o:p></o:p>
                        </span>
                    </p>

                    <p class="MsoNormal" style="margin-bottom:6.0pt;text-align:justify;line-height:150%">
                        <b>
                            <span lang="EN">
                                Mua điện thoại Xiaomi chính
                                hãng giá rẻ tại ItechStore
                            </span>
                        </b><span lang="EN"> <o:p></o:p></span>
                    </p>

                    <p class="MsoNormal" style="margin-bottom:6.0pt;text-align:justify;line-height:150%">
                        <span lang="EN" style="font-size:12.0pt;line-height:150%">
                            Nếu bạn đang tìm
                            kiếm một chiếc điện thoại thiết kế đẹp mắt, cấu hình ổn định trong tầm giá thì
                            hãy tham khảo smartphone của Xiaomi nhé. Trong những năm tới, Xiaomi sẽ tiếp tục
                            giới thiệu đến người dùng các thiết bị công nghệ chất lượng cao và smartphone
                            đáp ứng nhu cầu của mọi phân khúc khách hàng. Mua điện thoại thông minh Xiaomi
                            tại ItechStore quý khách sẽ nhận được chế độ bảo hành chính hãng 18 tháng,
                            bao xài đổi trả trong 30 ngày và rất nhiều ưu đãi. Tham khảo thông tin trên và
                            đặt mua sản phẩm ngay hôm nay.
                        </span>
                    </p>
                </div>
            </div>
        </section>
    </div>
</div>

@section scripts{
    <script src="~/js/JavaScript.js"></script>
}


